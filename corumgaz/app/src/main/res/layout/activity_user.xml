<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".KullaniciProfileFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image2"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:src="@drawable/defaulprofile2"
                app:civ_border_color="#130f40"
                app:civ_border_width="2dp" />
            <TextView
                android:id="@+id/kullaniciismi2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:hint="İsim ve Soyisim"
                android:minHeight="48dp"
                android:textColor="#130f40"
                android:textColorHint="#596275"
                android:textSize="25dp"
                android:textStyle="bold|italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/arkadasimg"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                     />

                <ImageView
                    android:id="@+id/takipimg"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:layout_weight="1"
                     />
                <ImageView
                    android:id="@+id/messageimg"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/msg" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/usertext2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:text="Arkadaş Ekle"
                    android:textColor="#7158e2"
                    android:textStyle="bold"

                    />

                <TextView
                    android:id="@+id/usertext1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="#7158e2"
                    android:layout_weight="1"
                    android:text="Takip Et"
                    android:layout_marginLeft="35dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="#7158e2"
                    android:layout_weight="1"
                    android:layout_marginRight="0dp"
                    android:text="Mesaj Gönder"
                    android:textStyle="bold"
                    />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:text="Profil Bilgileri"
                android:textColor="#192a56"
                android:textSize="25dp"
                android:textStyle="bold|italic" />




            <TextView
                android:id="@+id/input_egitim2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:hint="Eğitim Durumu"
                android:minHeight="48dp"
                android:textColor="@color/black"
                android:textColorHint="#596275"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/input_dogumtarih2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:hint="Doğum Tarihi"
                android:minHeight="48dp"
                android:textColor="@color/black"
                android:textColorHint="#596275"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/input_hakkinda2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:hint="Hakkımda"
                android:minHeight="48dp"
                android:textColor="@color/black"
                android:textColorHint="#596275"
                android:textStyle="bold|italic" />





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/arklar" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/takipciler" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:id="@+id/arkadastext"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_weight="1"
                    android:text="0 Arkadaş"
                    android:textColor="#44bd32"
                    android:textStyle="bold"

                    />

                <TextView
                    android:layout_width="0dp"
                    android:id="@+id/takipcitext"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="0dp"
                    android:textColor="#40739e"
                    android:layout_weight="1"
                    android:text="0 Takipçi"
                    android:textStyle="bold"
                    />


            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>